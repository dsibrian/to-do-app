{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "us-central1-docker.pkg.dev/$PROJECT_ID/to-do-app/sample-node-app-image",
        "."
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "us-central1-docker.pkg.dev/$PROJECT_ID/to-do-app/sample-node-app-image"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run",
        "deploy",
        "sample-node-app",
        "--image",
        "us-central1-docker.pkg.dev/$PROJECT_ID/to-do-app/sample-node-app-image",
        "--region",
        "us-central1",
        "--allow-unauthenticated"
      ]
    }
  ],
  "images": [
    "us-central1-docker.pkg.dev/$PROJECT_ID/to-do-app/sample-node-app-image"
  ],
  "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  }
}
